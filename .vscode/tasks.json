{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "C/C++: clang++ build active file",
        "type": "shell",
        "command": "/usr/bin/clang++",
        "args": [
          "-std=c++14",
          "-stdlib=libc++",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "problemMatcher": ["$gcc"],
        "group": { "kind": "build", "isDefault": true }
      }
    ]
  }
  